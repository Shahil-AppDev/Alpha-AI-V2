// Prisma schema for Alpha AI Backend

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ToolLanguage {
  PYTHON
  JAVASCRIPT
  BASH
  POWERSHELL
  GO
  RUST
  C
  CPP
  JAVA
  RUBY
  PHP
  PERL
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model Tool {
  id          String       @id @default(uuid())
  name        String       @unique
  description String
  category    String
  language    ToolLanguage
  riskLevel   RiskLevel
  code        String       @db.Text
  parameters  Json?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  enabled     Boolean      @default(true)

  @@index([category])
  @@index([riskLevel])
  @@index([language])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExecutionLog {
  id          String   @id @default(uuid())
  toolName    String
  status      String
  result      Json?
  error       String?
  executionTime Float?
  createdAt   DateTime @default(now())

  @@index([toolName])
  @@index([status])
  @@index([createdAt])
}
